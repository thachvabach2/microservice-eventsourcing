<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.20.xsd">

    <!-- TABLE BOOK -->
    <!-- flow: check table exists. If not exit -> create table books and column id. If exist -> noti message in onFailMessage   -->
    <changeSet id="create-table-book" author="bachdao">
        <preConditions onFail="CONTINUE" onFailMessage="table book already exists">
            <not>
                <tableExists tableName="book"/>
            </not>
        </preConditions>
        <createTable tableName="books">
            <column name="id" type="VARCHAR(255)">
                <constraints primaryKey="true" nullable="false" />
            </column>
        </createTable>
    </changeSet>

    <!-- ADD COLUMN "AUTHOR" -->
    <changeSet id="table-book-add-column-author" author="bachdao">
        <preConditions>
            <not>
                <columnExists tableName="books" columnName="author" />
            </not>
        </preConditions>
        <addColumn tableName="books">
            <column name="author" type="VARCHAR(255)">
                <constraints nullable="false" />
            </column>
        </addColumn>
    </changeSet>

    <!-- ADD COLUMN "IS_READY" -->
    <changeSet id="table-book-add-column-isReady" author="bachdao">
        <preConditions>
            <not>
                <columnExists tableName="books" columnName="is_ready" />
            </not>
        </preConditions>
        <addColumn tableName="books">
            <column name="is_ready" type="bit(1)">
                <constraints nullable="false" />
            </column>
        </addColumn>
    </changeSet>

    <!-- ADD COLUMN "NAME" -->
    <changeSet id="table-book-add-column-name" author="bachdao">
        <preConditions>
            <not>
                <columnExists tableName="books" columnName="name" />
            </not>
        </preConditions>
        <addColumn tableName="books">
            <column name="name" type="VARCHAR(255)">
                <constraints nullable="false" />
            </column>
        </addColumn>
    </changeSet>

</databaseChangeLog>